<%-include("./layouts/head.ejs")%>

<div class="container mt-4 mb-4">
  <div class="row">
    <div class="col-md-6 offset-md-3 mb-3">
      <h5 class="mb-4 mt-4 text-center">EDIT LOAN</h5>
      <form method="POST" action="/edit">
        <input type="hidden" value="<%= hutang._id %>" name="hutangId" />
        <div class="form-group row">
          <label
            for="inputPassword"
            class="col-sm-2 col-form-label  col-form-label-lg"
            >NAMA</label
          >
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control form-control-lg"
              name="nama"
              value="<%= hutang.nama %>"
            />
          </div>
        </div>
        <div class="form-group row">
          <label
            for="inputPassword"
            class="col-sm-2 col-form-label col-form-label-lg"
            >Total</label
          >
          <div class="col-sm-10">
            <input
              type="number"
              class="form-control form-control-lg"
              name="total"
              value="<%= hutang.total %>"
            />
          </div>
        </div>
        <div class="form-group row">
          <button
            class="btn btn-lg btn-dark mx-auto mt-4"
            name="update"
            type="submit"
            value="UPDATE"
          >
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%-include("./layouts/footer.ejs")%>
