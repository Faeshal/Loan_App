<% include layouts/head %>

<div class="container mt-4 mb-4">
  <div class="row">
    <div class="col-md-6 offset-md-3 mb-3">
      <h5 class="mb-4 text-center mt-4">ENTRY USER</h5>
      <form method="POST">
        <div class="form-group row mt-4">
          <label
            for="inputPassword"
            class="col-sm-2 col-form-label col-form-label-lg"
            >Nama</label
          >
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control form-control-lg"
              name="nama"
            />
          </div>
        </div>
        <div class="form-group row">
          <label
            for="inputPassword"
            class="col-sm-2 col-form-label col-form-label-lg"
            >Total</label
          >
          <div class="col-sm-10">
            <input
              type="number"
              class="form-control form-control-lg"
              name="total"
            />
          </div>
        </div>
        <div class="form-group row">
          <button
            class="btn btn-lg btn-dark mx-auto mt-4"
            name="submit"
            type="submit"
          >
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

